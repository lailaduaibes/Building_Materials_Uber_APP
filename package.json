{
  "name": "building-materials-uber-app",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "echo \"Linting not configured yet\"",
    "db:setup": "psql -d delivery_app_dev -f database/schema.sql",
    "db:reset": "dropdb --if-exists delivery_app_dev && createdb delivery_app_dev && npm run db:setup",
    "install-all": "npm install && cd mobile-app && npm install",
    "mobile": "cd mobile-app && npm start",
    "mobile-web": "cd mobile-app && npx expo start --web",
    "deploy": "npm run build",
    "heroku-postbuild": "npm run build"
  },
  "keywords": [
    "delivery",
    "building-materials",
    "logistics",
    "react-native",
    "nodejs",
    "api"
  ],
  "author": "Your Name",
  "license": "MIT",
  "description": "Complete Building Materials Delivery Management System with API and Mobile App",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "expo": "^53.0.20",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "redis": "^5.8.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.2.1",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
